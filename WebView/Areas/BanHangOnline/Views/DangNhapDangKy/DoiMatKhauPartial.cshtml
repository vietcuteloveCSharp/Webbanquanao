<script>
    document.getElementById("submitBtn").addEventListener("click", function (e) {
        e.preventDefault(); // Ngăn chặn hành vi mặc định của nút (submit form)

        // Lấy giá trị từ các input
        const mkMoi = document.getElementById("mkMoi").value;
        const mkXacNhan = document.getElementById("mkXacNhan").value;

        // Lấy các thẻ thông báo lỗi
        const mkMoiError = document.getElementById("mkMoiError");
        const mkXacNhanError = document.getElementById("mkXacNhanError");

        // Xóa thông báo lỗi cũ
        mkMoiError.textContent = "";
        mkXacNhanError.textContent = "";

        let isValid = true;

        // Kiểm tra mật khẩu mới
        if (mkMoi.length <= 6) {
            mkMoiError.textContent = "Mật khẩu phải lớn hơn 6 ký tự.";
            isValid = false;
        }

        // Kiểm tra mật khẩu xác nhận
        if (mkXacNhan !== mkMoi) {
            mkXacNhanError.textContent = "Mật khẩu xác nhận không khớp.";
            isValid = false;
        }

        // Nếu hợp lệ, thực hiện hành động (submit form hoặc xử lý khác)
        if (isValid) {
            alert("Mật khẩu hợp lệ!");
        }
    });
</script>