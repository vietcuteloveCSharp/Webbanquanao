@model IEnumerable<WebView.NghiaDTO.ChiTietKhuyenMaiDTO>

@{
    ViewData["Title"] = "Danh Sách Mã Giảm Giá";
}
<h2>@ViewData["Title"]</h2>

<div class="mb-3 text-right">
    <a asp-action="Create" asp-controller="KhuyenMai" class="btn btn-success">
        <i class="fa fa-plus"></i> Thêm khuyễn mại
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover" id="myTable">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Tên khuyến mại</th>
                <th scope="col">Tỉ lệ khuyến mại (%)</th>
                <th scope="col">Thời gian áp dụng</th>
                <th scope="col">Điều kiện (VND)</th>
                <th scope="col">Tối đa (VND)</th>
                <th scope="col">Trạng thái</th>
                <th scope="col">Hành động</th>
              
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.KhuyenMaiDTO?.Ten ?? "N/A"</td>
                    <td>
                        @(item.LoaiKhuyenMai == 0 ? $"{item.GiaTriGiam}%" :
                            item.LoaiKhuyenMai == 1 ? String.Format("{0:N0}", item.MenhGia) : "N/A")
                    </td>
                    <td>@(item.LoaiKhuyenMai == 0 ? $"{item.GiaTriGiam}%" : item.LoaiKhuyenMai == 1 ? String.Format("{0:N0}", item.MenhGia) : "N/A")</td>
                    <td>@String.Format("{0:dd/MM/yyyy} - {1:dd/MM/yyyy}", item.KhuyenMaiDTO.NgayBatDau, item.KhuyenMaiDTO.NgayKetThuc)</td>
                    <td>@String.Format("{0:N0}", item.MenhGia)</td>
                    <td>@String.Format("{0:N0}", item.GiaTriToiDa)</td>
                    <td>@(item.KhuyenMaiDTO.TrangThai ? "Đang khuyễn mại" : "Ngừng khuyễn mại")</td>
                    <td>
                        <a asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-sm btn-warning">
                            <i class="fa fa-edit"></i> Sửa
                        </a>
                        <a asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-sm btn-danger confirmDeletion">
                            <i class="fa fa-trash"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Confirm deletion logic
            document.querySelectorAll('.confirmDeletion').forEach(btn => {
                btn.addEventListener('click', function (e) {
                    if (!confirm("Bạn có chắc chắn muốn xóa mục này?")) {
                        e.preventDefault();
                    }
                });
            });
        });
    </script>
}
