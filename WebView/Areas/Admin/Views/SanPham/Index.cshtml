@model IEnumerable<DAL.Entities.ChiTietSanPham>

@{
    ViewBag.Title = "Quản lý Sản phẩm";
}

<h2>Quản lý Sản phẩm</h2>
<a asp-action="Create" asp-controller="SanPham" class="btn btn-success">Thêm mới sản phẩm</a>
<!-- Bảng hiển thị thông tin sản phẩm -->
<table id="myTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Sản Phẩm</th>
            <th>Giá </th>
            <th>Màu Sắc</th>
            <th>Kích Thước</th>
            <th>Số Lượng</th>
            <th>Thương Hiệu</th>
            <th>Danh Mục</th>
            <th>Ngày Tạo</th>
            <th>Trạng Thái</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.SanPham.Ten</td> <!-- Thuộc tính TenSanPham giả định có trong SanPham -->
                <td>@item.SanPham.Gia.ToString("#,##0 VNĐ")</td> <!-- Thuộc tính TenSanPham giả định có trong SanPham -->
                <td>@item.MauSac?.Ten</td> <!-- Thuộc tính TenMau giả định có trong MauSac -->
                <td>@item.KichThuoc.Ten</td> <!-- Thuộc tính TenKichThuoc giả định có trong KichThuoc -->
                <td>@item.SoLuong</td>
                <td>@item.SanPham.Id_ThuongHieu</td>
                <td>@item.SanPham.Id_DanhMuc</td>
                <td>@item.NgayTao.ToString("dd/MM/yyyy")</td>
                <td>@(item.TrangThai ? "Kích Hoạt" : "Vô Hiệu Hóa")</td>
                <td>
                    <a asp-action="Edit" asp-controller="SanPham" asp-route-Id="@item.Id" class="btn btn-primary">   <i class="fa fa-edit"></i>Sửa</a>
                    <a asp-action="Delete" asp-controller="SanPham" asp-route-Id="@item.Id" class="btn btn-danger confirmDeletion">   <i class="fa fa-trash"></i>Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Nút thêm sản phẩm mới -->
<!-- Scripts để khởi tạo DataTable -->
@section Scripts {
    <script>
        $(document).ready(function () {
            // Kiểm tra xem bảng đã là DataTable hay chưa
            if (!$.fn.dataTable.isDataTable('#myTable')) {
                // Nếu chưa, khởi tạo DataTable
                $('#myTable').DataTable({
                    paging: true,
                    searching: true,
                    ordering: true
                });
            }
        });

        // Xác nhận trước khi xóa
        $(document).on('click', '.confirmDeletion', function (e) {
            e.preventDefault();
            var url = $(this).attr('href');
            Swal.fire({
                title: 'Bạn có chắc chắn muốn xóa?',
                text: "Hành động này không thể hoàn tác!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Xóa',
                cancelButtonText: 'Hủy'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = url;
                }
            });
        });
        });
    </script>
}
