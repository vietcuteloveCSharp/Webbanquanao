
@using DTO.VuvietanhDTO.KhachHangs
@using DTO.VuvietanhDTO.HoadonsDTO
@using Enum.EnumVVA
@using static WebView.Areas.Admin.ViewModels.ViewHoaDon
@model List<HoaDonView>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thông Tin Đơn Hàng</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h2>Tìm kiếm</h2>
    <form asp-action="SearchById" method="get"> 
        <label for="orderID">Mã hóa đơn:</label> 
        <input type="number" name="orderID" id="searchId" class="form-control" />
        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
        </form>
    <h1>Thông Tin Đơn Hàng</h1>
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger"> @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p>@error.ErrorMessage</p>
            } </div>
    }
    <table>
        <tr>
            <th>Thông tin khách hàng</th>
            <th>Thông tin đơn hàng</th>
            <th>Thời Gian</th>
            <th>Địa chỉ Giao Hàng</th>
            <th>Tổng Tiền</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
        @if (Model != null && Model.Any())
        {
            @foreach (var hoaDon in Model)
            {
                <tr>
                    <td>
                        <p>SĐT: @hoaDon.KhachHangs.Sdt</p>@* //Lấy SDT *@
                        <p>Tên Khách Hàng: @hoaDon.KhachHangs.Ten</p> @* //Lấy tên *@
                    </td>
                    <td>
                        <p>Mã đơn hàng: @hoaDon.Id</p>
                        <table border="none">
                            <tr>
                                <th>Sản Phẩm</th>
                                <th>Số Lượng</th>
                            </tr>
                            @if (hoaDon.SanPhams != null && hoaDon.SanPhams.Any())
                            {
                                @foreach (var sp in hoaDon.SanPhams)
                                {
                                    <tr>
                                        <td>@sp.Ten</td>
                                        <td>@sp.SoLuong</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td>TenSp</td>
                                    <td>SoLuongSp</td>
                                </tr>
                            }
                        </table>
                    </td>
                    <td>@hoaDon.NgayTao</td>

                    <td>@hoaDon.DiaChiGiaoHang</td>

                    <td>@hoaDon.TongTien</td>
                    <td>
                        @Enum.GetName(typeof(ETrangThaiHD), @hoaDon.TrangThai).Replace("ChoXuLy", "Chờ xử lý").Replace("HoanThanhDon", "Hoàn thành đơn").Replace("HuyDon", "Hủy đơn").Replace("ChoXacNhan", "Chờ xác nhận").Replace("ChoThanhToan", "Chờ Thanh Toán ").Replace("DangVanChuyen", "Đang vận chuyển ").Replace("DangVanChuyenCOD", "Đang vận chuyển COD").Replace("HoanHang", "Hoàn Hàng").Replace("DaThanhToan", "Đã thanh toán ")
                    </td>
                    <td>

                        <a asp-action="OrderDetail" asp-controller="Order" asp-route-Id="@hoaDon.Id" class="btn btn-sm btn-info">Chi Tiết</a>

                        <a asp-action="CancelOrder" asp-controller="Order" asp-route-Id="@hoaDon.Id" class="btn btn-sm btn-danger">Hủy đơn</a>
                    </td>
                </tr>
            }
        }else
        {
            <p>Không có hóa đơn nào </p>
        }
    </table>
</body>

</html>
