@using WebView.Areas.Admin.ViewModels
@model List<DayShifts> 
<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h1>Lịch Làm Việc Trong Tuần</h1>
        </div>
        <div class="card-body">
            <table class="table table-bordered text-center">
                <thead>
                    <tr>
                        <th>Ngày</th>
                        <th>Chi Tiết Ca Làm Việc</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var day in Model)
                    {
                        <tr>
                            <td>
                                <strong>@day.Date.ToString("dd/MM/yyyy")</strong>
                            </td>
                            <td>
                                @if (day.Shifts.Any())
                                {
                                    <ul>
                                        @foreach (var shift in day.Shifts)
                                        {
                                            <li>
                                                <strong>@shift.ShiftName (@shift.StartTime - @shift.EndTime)</strong>
                                                <ul>
                                                    @foreach (var employee in shift.Employees)
                                                    {
                                                        <li>@employee.Name (@employee.Role)</li>
                                                    }
                                                </ul>
                                            </li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <p>Không có ca làm việc</p>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>