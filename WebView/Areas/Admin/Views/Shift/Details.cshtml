
@model WebView.Areas.Admin.ViewModels.Schedule

@{
    ViewData["Title"] = "Chi tiết lịch làm việc";
}
<!DOCTYPE html>
    <html>
    <head>
        <title></title>
    <style>
        .card {
            height: 100%;
        }

        .list-group-item {
            border-left: none;
            border-right: none;
        }
    </style>
    </head>
    <body>
    <div class="container mt-4">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0">@ViewData["Title"] - @Model.Date.ToString("dd/MM/yyyy")</h4>
            </div>

            <div class="card-body">
                <div class="row">
                    @foreach (var shift in Model.Shifts)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card">
                                <div class="card-header bg-secondary text-white">
                                    <h5 class="mb-0">@shift.ShiftName</h5>
                                    <small>@shift.StartTime - @shift.EndTime</small>
                                </div>
                                <div class="card-body">
                                    <h6>Nhân viên trực ca:</h6>
                                    <ul class="list-group">
                                        @foreach (var employee in shift.Employees)
                                        {
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                @employee.Name
                                                <span class="badge badge-primary">@employee.Role</span>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="text-center mt-4">
                    <a asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>
            </div>
        </div>
    </div>


    </body>
    </html>

