@model IEnumerable<DAL.Entities.GioHang>

<h2>Giỏ hàng của bạn</h2>

@if (!Model.Any())
{
    <p>Giỏ hàng của bạn đang trống.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Sản phẩm</th>
                <th>Số lượng</th>
                <th>Giá</th>
                <th>Thành tiền</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ChiTietSanPham.SanPham.Ten</td>
                    <td>
                        <form asp-action="UpdateQuantity" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@item.Id" />
                            <input type="number" name="soLuong" value="@item.SoLuong" min="1" class="form-control d-inline" style="width: 70px;" />
                            <button type="submit" class="btn btn-sm btn-primary">Cập nhật</button>
                        </form>
                    </td>

                    @* Xử lý chuyển đổi Gia từ string sang decimal *@
                    @{
                        decimal giaSanPham;
                        if (decimal.TryParse(item.ChiTietSanPham.SanPham.Gia, out giaSanPham))
                        {
                            <td>@giaSanPham.ToString("#,##0 VNĐ")</td>
                            <td>@(item.SoLuong * giaSanPham).ToString("#,##0 VNĐ")</td>
                        }
                        else
                        {
                            <td>Giá không hợp lệ</td>
                            <td>-</td>
                        }
                    }

                    <td>
                        <a asp-action="RemoveFromCart" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right"><b>Tổng cộng:</b></td>
                <td colspan="2">
                    @{
                        decimal tongCong = 0;
                        decimal giaSanPhamTong;
                        foreach (var item in Model)
                        {
                            if (decimal.TryParse(item.ChiTietSanPham.SanPham.Gia, out giaSanPhamTong))
                            {
                                tongCong += item.SoLuong * giaSanPhamTong;
                            }
                        }
                    }
                    <b>@tongCong.ToString("#,##0 VNĐ")</b>
                </td>
            </tr>
            <tr>
                <td colspan="5" class="text-right">
                    <form asp-action="ProceedToCheckout" method="get">
                        <button type="submit" class="btn btn-success">Mua hàng</button>
                    </form>
                </td>
            </tr>
        </tfoot>
    </table>
}
