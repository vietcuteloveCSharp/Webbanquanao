@model IEnumerable<DAL.Entities.GioHang>

<h4 class="text-center mb-4">Ở Giỏ hàng của bạn</h4>

@if (!Model.Any())
{
    <div class="alert alert-warning text-center">Giỏ hàng của bạn đang trống.</div>
}
else
{
    <section id="cart_items" class="container">
        <form method="post">
            <div class="table-responsive cart_info">
                <table class="table table-bordered table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th class="text-center">Sản phẩm</th>
                            <th class="text-center">Số lượng</th>
                            <th class="text-center">Giá</th>
                            <th class="text-center">Thành tiền</th>
                            <th class="text-center">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center align-middle">
                                    <span class="font-weight-bold">@item.ChiTietSanPham.SanPham.Ten</span>
                                </td>
                                <td class="text-center align-middle">
                                    <form asp-action="UpdateQuantity" method="post" class="d-inline">
                                        <div class="input-group">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <input type="number" name="soLuong" value="@item.SoLuong" min="1" class="form-control text-center" style="width: 80px;" />
                                            <div class="input-group-append">
                                                <button type="submit" class="btn btn-outline-primary">Cập nhật</button>
                                            </div>
                                        </div>
                                    </form>
                                </td>
                                <td class="text-center align-middle">
                                    @item.ChiTietSanPham.SanPham.Gia.ToString("#,##0 VNĐ")
                                </td>
                                <td class="text-center align-middle">
                                    @{
                                        decimal giaSanPham = item.ChiTietSanPham.SanPham.Gia;
                                        decimal thanhTien = item.SoLuong * giaSanPham;
                                        <span>@thanhTien.ToString("#,##0 VNĐ")</span>
                                    }

                                </td>
                                <td class="text-center align-middle">
                                    <a asp-action="RemoveFromCart" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3" class="text-right"><b>Tổng cộng:</b></td>
                            <td colspan="2" class="text-center">
                                @{
                                    decimal tongCong = 0;
                                    foreach (var item in Model)
                                    {
                                        decimal giaSanPhamTong = item.ChiTietSanPham.SanPham.Gia;
                                        tongCong += item.SoLuong * giaSanPhamTong;
                                    }
                                }

                                <b>@tongCong.ToString("#,##0 VNĐ")</b>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="5" class="text-right">
                                <form asp-action="ProceedToCheckout" method="get">
                                    <button type="submit" class="btn btn-success btn-lg">Tiến hành mua hàng</button>
                                </form>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </form>
    </section>
}
