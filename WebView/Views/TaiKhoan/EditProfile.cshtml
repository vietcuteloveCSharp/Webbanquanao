@model DAL.Entities.KhachHang

@{
    ViewData["Title"] = "Chỉnh sửa thông tin cá nhân";
}

<h2>Chỉnh sửa thông tin cá nhân</h2>

<form asp-action="EditProfile" method="post">
    <div class="form-group">
        <label for="TaiKhoan">Tài khoản</label>
        <input type="text" class="form-control" id="TaiKhoan" name="TaiKhoan" value="@Model.TaiKhoan" readonly />
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
    </div>

    <div class="form-group">
        <label for="NgaySinh">Ngày sinh</label>
        <input type="date" class="form-control" id="NgaySinh" name="NgaySinh" value="@Model.NgaySinh?.ToString("yyyy-MM-dd")" />
    </div>

    <div class="form-group">
        <label for="TenNhanVien">Tên nhân viên</label>
        <input type="text" class="form-control" id="TenNhanVien" name="TenNhanVien" value="@Model.TenNhanVien" />
    </div>

    <div class="form-group">
        <label for="Sdt">Số điện thoại</label>
        <input type="text" class="form-control" id="Sdt" name="Sdt" value="@Model.Sdt" />
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a asp-action="Profile" class="btn btn-secondary">Hủy</a>
</form>

<style>
    .form-group {
        margin-bottom: 15px;
    }
</style>
