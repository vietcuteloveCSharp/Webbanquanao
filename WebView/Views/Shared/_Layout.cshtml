    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
    <link rel="shortcut icon" href="images/ico/favicon.ico">
    <style>
        <style >
        #slider-carousel .carousel-inner .item img {
            width: 200px; /* Điều chỉnh chiều rộng */
            height: auto; /* Giữ tỷ lệ ảnh */
            /* Header trên cùng */
            .header-top

        {
            background-color: #333;
            color: #fff;
            padding: 10px 0;
        }

        .header-top .shop-menu a {
            color: #fff;
            padding: 5px 15px;
            font-size: 14px;
        }

            .header-top .shop-menu a:hover {
                color: #ffcc00;
            }

        /* Header dưới cùng với menu chính */
        .header-middle {
            background-color: #fff;
            border-bottom: 1px solid #ddd;
            padding: 15px 0;
        }

            .header-middle .navbar-nav li a {
                color: #333;
                font-weight: bold;
                font-size: 16px;
            }

                .header-middle .navbar-nav li a:hover {
                    color: #ffcc00;
                }

        /* Search box */
        .search_box {
            display: flex;
            gap: 5px;
        }

            .search_box input[type="text"] {
                padding: 8px;
                border-radius: 4px;
                border: 1px solid #ddd;
                width: 100%;
            }

            .search_box button {
                background-color: #ffcc00;
                border: none;
                padding: 8px 12px;
                border-radius: 4px;
                color: #333;
                font-weight: bold;
            }

        }
    </style>

    </style>
</head><!--/head-->

<body>
    <header id="header">
        <div class="header-middle">
            <!--header-middle-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-4">
                    </div>
                    <div class="col-sm-8">
                        <div class="shop-menu pull-right">
                            <ul class="nav navbar-nav">
                                <li><a asp-controller="GioHang" asp-action="Index"><i class="fa fa-shopping-cart"></i> Giỏ Hàng</a></li>

                                @if (Context.Session.GetString("TaiKhoan") != null)
                                {
                                    <!-- Nếu người dùng đã đăng nhập, hiển thị 'Đăng Xuất' và 'Thông tin' -->
                                    <li><a asp-controller="Admin" asp-action="Index"><i class="fa fa-user"></i> Tài Khoản</a></li>
                                    <li><a asp-controller="TaiKhoan" asp-action="Logout"><i class="fa fa-lock"></i>Xin chào, @Context.Session.GetString("TaiKhoan")! Đăng Xuất</a></li>
                                    <li><a asp-controller="TaiKhoan" asp-action="Profile"><i class="fa fa-user"></i> Thông tin</a></li>
                                    <li><a asp-controller="BanTaiQuay" asp-action="Index"><i class="fa fa-shopping-cart"></i> Bán Hàng Tại Quầy</a></li>
                                }
                                else
                                {
                                    <!-- Nếu người dùng chưa đăng nhập, hiển thị 'Đăng Nhập' -->
                                    <li><a asp-controller="TaiKhoan" asp-action="Login"><i class="fa fa-lock"></i> Đăng Nhập</a></li>
                                }
                            </ul>


                        </div>
                    </div>
                </div>
            </div>
        </div><!--/header-middle-->

        <div class="header-bottom">
            <!--header-bottom-->
            <div class="container">
                <div class="row">
                    <div class="col-sm-9">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div class="mainmenu pull-left">
                            <ul class="nav navbar-nav collapse navbar-collapse">
                                <li><a asp-controller="Home" asp-action="Index" class="active">Trang Chủ</a></li>
                                <li><a asp-controller="SanPham" asp-action="Index" class="active">Sản Phẩm</a></li>
                                <li><a asp-controller="Admin" asp-action="Index" class="active">Admin</a></li>
                                <li><a asp-controller="BanHangOnline" asp-action="Index" class="active">Ban Hang Online</a></li>
                                <li><a asp-controller="BanTaiQuay" asp-action="Index" class="active">Ban Tai Quay</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <form asp-controller="Product" asp-action="Search" method="post">
                            <div class="search_box pull-right">
                                <input type="text" placeholder="Tìm kiếm" name="searchTerm" />
                                <button class="btn btn-warning" type="submit">Tìm Kiếm</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div><!--/header-bottom-->
    </header><!--/header-->
    <section id="slider">
        <!--slider-->
        @if (ViewBag.HideSlider == null || ViewBag.HideSlider == false)
        {

            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <div id="slider-carousel" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
                                <li data-target="#slider-carousel" data-slide-to="1"></li>
                                <li data-target="#slider-carousel" data-slide-to="2"></li>
                            </ol>

                            <div class="carousel-inner">
                                <div class="item active">
                                    <div class="col-sm-6">
                                        <h1><span>C</span>-Shop</h1>
                                        <h2>Chất lượng tạo nên uy tín</h2>
                                        <p>Cung cấp tất cả các loại quần áo dành cho nam giới.</p>
                                    </div>
                                    <div class="col-sm-6">
                                        <img src="https://down-vn.img.susercontent.com/file/vn-11134207-7r98o-lwurzhyuona37b" height="450px" />
                                    </div>
                                </div>
                                <div class="item">
                                    <div class="col-sm-6">
                                        <h1><span>C</span>-Shop</h1>
                                        <h2>Chất lượng tạo nên uy tín</h2>
                                        <p>Cung cấp tất cả các loại quần áo dành cho nam giới.</p>
                                    </div>
                                    <div class="col-sm-6">
                                        <img src="https://product.hstatic.net/1000357687/product/denartboard-1_33d3bed2228d4df6b6cc90a21448a9d8_master.png" height="450px" />

                                    </div>
                                </div>

                                <div class="item">
                                    <div class="col-sm-6">
                                        <h1><span>C</span>-Shop</h1>
                                        <h2>Chất lượng tạo nên uy tín</h2>
                                        <p>Cung cấp tất cả các loại quần áo dành cho nam giới.</p>
                                        </div>
                                    <div class="col-sm-6">
                                        <img src="https://product.hstatic.net/1000357687/product/denartboard-2_de89ee82b8fb498bb802ba6753166d6f_master.png" height="450px" />

                                    </div>
                                </div>

                            </div>

                            <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
                                <i class="fa fa-angle-left"></i>
                            </a>
                            <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
                                <i class="fa fa-angle-right"></i>
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        }

        </div>
    </section><!--/slider-->

    <section>
        <div class="container">
            <div class="row">
                @Html.Partial("_NotificationPartial")
                @RenderBody()
            </div>
    </section>

