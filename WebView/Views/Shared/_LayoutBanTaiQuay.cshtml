<!DOCTYPE html>
<html>
<head>
    @* <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    </environment> *@
        <title>Bán tại quầy</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
       
    <style>
        .fakeimg {
            height: 200px;
            background: #aaa;
        }

        body {
            background: #d1d5db;
        }


        .modal-body {
            position: relative;
        }

        .form {
            position: relative;
        }

        .modal-body > label {
            display: inline;
        }

        label .fa-magnifying-glass {
            position: absolute;
            top: 28px;
            left: 29px;
            color: #9ca3af;
        }

        label .fa-pen {
            position: absolute;
            top: 10px;
            left: 17px;
            color: #9ca3af;
        }

        .form-input {
            height: 35px;
            text-indent: 28px;
            border-radius: 10px;
        }

            .form-input:focus {
                box-shadow: none;
                border: none;
            }
    </style>
</head>
<body>
    @* Header *@
    <nav class="navbar navbar-expand bg-white navbar-dark">
        <!-- <div class="container-fluid"> -->
        <div class="container-fluid d-block">


            <div class="row justify-content-between align-items-center">
                <div class="col-2">

                    <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                            data-bs-target="#timKiemSanPhamModal">
                        Tìm kiếm hàng hóa
                    </button>
                </div>
                <div class="col-5">
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">
                                Hóa đơn 1
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn " href="#">
                                <i class="fa-solid fa-plus"></i>
                            </a>
                        </li>

                    </ul>
                </div>
                <div class="col-2 ">
                    <div class="d-flex justify-content-end align-items-center">
                        <div>
                            <label class="me-4">Admin</label>
                        </div>
                        <div>
                            <!-- <a href="#"> -->

                            <div class="container-fluid">

                                <button class="btn btn-primary" type="button" data-bs-toggle="offcanvas"
                                        data-bs-target="#offcanvasRight">
                                    <i class="fa-solid fa-bars"></i>
                                </button>
                            </div>
                            <!-- </a> -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- </div> -->
    </nav>
    <div class="">
        @RenderBody()
    </div>
    @* end header *@
    @* Footer *@
    <div class="mt-3 p-3 bg-white text-white text-start">
        <div class="d-flex justify-content-start">
            <a class="btn btn-primary me-3" href="#">Bán nhanh</a>
            <a class="btn btn-primary" href="#">Bán giao hàng</a>
        </div>
    </div>
    @* end footer *@
 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
